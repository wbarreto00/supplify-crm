@baseUrl = http://localhost:3000
@apiKey = dev-agent-key

### Agent: upsert company
POST {{baseUrl}}/api/agent/company
Content-Type: application/json
X-API-Key: {{apiKey}}

{
  "name": "Supplify",
  "segment": "SaaS",
  "size": "11-50",
  "owner": "Wesley",
  "status": "lead",
  "source": "website",
  "notes": "Conta priorizada"
}

